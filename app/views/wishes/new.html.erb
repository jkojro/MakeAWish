<%= render 'form', wish: @wish %>



<h2><%= link_to 'Lista moich Wishy', home_wishlist_path %></h2>

<table>
  <thead>
    <tr>
      <th>MÃ³j Wish</th>
	  <th>Odbiorca</th>
	  <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
			
			<% if (wish.user == current_user) %>
				<td><%= link_to wish.mywish, wish, class: "btn btn-danger btn-outline" %></td>
				<td><%= wish.reciever %></td>
        		<td><%= link_to 'Edytuj', edit_wish_path(wish) %></td>
				
				<td><%= link_to wish, method: :delete, data: { confirm: 'Are you sure?' } do %>
						<i class="fa fa-trash"></i>
					<% end %>
				</td>	
			<% end %>
      </tr>
    <% end %>
  </tbody>
</table>





<h1>New Wish</h1>

<%= render 'form', wish: @wish %>

<%= link_to 'Back', wishes_path %>

<%= link_to 'My Wish List', home_wishlist_path %>

<h1>Wishes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>My Wish</th>
	  <th>Reciever</th>
	  <th>user id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        	<td><%= wish.name %></td>
			<td><%= wish.reciever %></td>
			<td><%= wish.user_id %></td>
			<% if (wish.user == current_user) %>
				<td><%= wish.mywish %></td>
        		<td><%= link_to 'Show', wish %></td>
        		<td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        		<td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wish', new_wish_path %>


<p id="notice"><%= notice %></p>

<h1>Wishes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
	  <th>Reciever</th>
	  <th>user id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
		<% if ((wish.reciever == current_user.name) || (wish.reciever == current_user.fbname) || (wish.reciever == nil) ) %>  
        	<td><%= link_to wish.name, wish_path(wish) %></td>
			<td><%= wish.reciever %></td>
			<td><%= wish.user_id %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wish', new_wish_path %>


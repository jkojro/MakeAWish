<% @querry.id = querry.id %>
<div>
  <h4>Pytanie <%= @wish.querries.index(querry)+1 %>: <%= querry.question %></h4>
    <% if (@wish.user == current_user) %>
  		<p>Odpowiedź: <%= querry.answer %></p>
		<p>Wskazówka: <%= querry.tip %></p>
	<% else %>	
	
		<% if querry.isdone? %>
			<h4 style="color: red; font-size: 20px; opacity: 0.7;">Brawo!  Przejdź do kolejnego pytania.</h4>
			<% else %>
		
			<%= render partial: 'querries/answerform' %>
			<% if querry.myanswers.size > 2 %>
				<h4 style="text-align:left;">Może wskazówkę? <%= querry.tip %></h4>
			<% end %>

			<% querry.myanswers.reverse.each do |myanswer| %>
				<p>Twój strzał:<%= myanswer.reply %></p>
				
			<% end %>	
	
		<% end %>
		
	<% end %>		
</div>

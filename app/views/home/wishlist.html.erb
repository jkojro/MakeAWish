
<h1>Wishes</h1>
<table>
  <thead>
    <tr>
      <th>Twórca</th>
	  <th>Odbiorca</th>
      <th>Mój Wish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        	<td><%= "Wish from  #{wish.user.name}" %></td>
			<td><%= wish.reciever %></td>
			
				<td><%= wish.mywish %></td>
        		<td><%= link_to 'Show', wish %></td>
        		<td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        		<td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			
      </tr>
    <% end %>
  </tbody>
</table>


<h3>Zaloguj się</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-goroup">
    <%= f.password_field :password, placeholder: "Hasło", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Zaloguj się", class: "btn btn-danger btn-sm" %>
  </div>
<% end %>

<%= link_to "Nie pamiętasz hasła?", new_password_path(resource_name) %>

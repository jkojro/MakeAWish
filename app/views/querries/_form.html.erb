<h3>Dodaj pytanie</h3>

<%= form_for [ @wish, @querry ] do |f| %>
  <div clas="form-group">
    <%= f.label :question, "Twoje pytanie" %><br/>
    <%= f.text_area :question, class:'form-control' %>
  </div>	  
  	<div clas="form-group">
   	 <%= f.label :answer, "Twoja odpowiedź" %><br/>
   	 <%= f.text_field :answer, class:'form-control' %>
	</div>

	<div clas="form-group">
   	 <%= f.label :tip, "Zostaw Mikołajowi wskazówkę" %><br/>
    	<%= f.text_area :tip, class:'form-control' %>
  	</div>
</br>
  	<div clas="form-group">
   	 <%= f.submit 'Wrzucaj', class: 'btn btn-danger btn-sm' %>
  	</div>
<% end %>
<h3>Post a Comment</h3>

<%= form_for [ @wish, @querry ] do |f| %>
  <p>
    <%= f.label :question %><br/>
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.label :answer %><br/>
    <%= f.text_field :answer%>
</p>
	<p>
    <%= f.label :tip %><br/>
    <%= f.text_area :tip%>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>